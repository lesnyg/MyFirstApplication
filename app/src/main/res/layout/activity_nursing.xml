<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".NursingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="이름"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_room"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="병실"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="호"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="혈압"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="혈압"
            android:textSize="24sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_blood2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="혈압"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="맥박(회/분)"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_pulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="맥박"
            android:textSize="24sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_pulse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="혈압"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="체온(C)"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="체온"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="호흡(회/분)"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_breath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="호흡"
            android:textSize="24sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_breath2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="혈압"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="혈당(mg/ml)"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_glucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="혈당"
            android:textSize="24sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_glucose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="혈압"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="체중(kg)"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="체중"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="상태"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="상태"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="식사"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="식사"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="배변"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_evacuation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="배변"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="문제행동"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_behavior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="문제행동"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="대소변"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_fecesUrine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="대소변"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="섬망"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_delirium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="섬망"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="낙상"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_fall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="낙상"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="욕창"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_bedsore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="욕창"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="부위"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_bodyarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="부위"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="통증"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_pain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="통증"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="탈수"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_dehydrated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="탈수"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="내용"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="내용"
            android:textSize="24sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송하기" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
